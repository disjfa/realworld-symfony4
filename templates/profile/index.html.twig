{% extends "base.html.twig" %}

{% block body %}
    <div class="profile-page">
        <div class="user-info">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-md-10 offset-md-1">
                        <img src="{{ profile.image }}" class="user-img">
                        <h4>{{ profile.username }}</h4>
                        <p>
                            {{ profile.bio }}
                        </p>
                        <button class="btn btn-sm action-btn btn-outline-secondary">
                            <i class="ion-plus-round"></i>
                            Follow disjfa
                        </button>

                        <a ui-sref="app.settings" class="btn btn-sm btn-outline-secondary action-btn ng-hide" ng-show="$ctrl.isUser" href="#/settings">
                            <i class="ion-gear-a"></i> Edit Profile Settings
                        </a>

                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-10 offset-md-1">
                    {% include 'articles/list.html.twig' with articles %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
