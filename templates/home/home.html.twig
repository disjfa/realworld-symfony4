{% extends "base.html.twig" %}

{% block body %}
    <div class="home-page">
        <!-- Splash banner that only shows when not logged in -->
        <div class="banner">
            <div class="container">
                <h1 class="logo-font ">conduit</h1>
                <p>A place to share your knowledge.</p>
            </div>
        </div>
        <div class="container page">
            <div class="row">
                <div class="col-md-9">
                    <!-- Tabs for toggling between feed, article lists -->
                    <div class="feed-toggle">
                        <ul class="nav nav-pills outline-active">
                            <li class="nav-item">
                                <a href="" class="nav-link">
                                    Your Feed
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('home_index') }}" class="nav-link active">
                                    Global Feed
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="" class="nav-link active">
                                    <i class="ion-pound"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    {% include 'articles/list.html.twig' with articles %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
